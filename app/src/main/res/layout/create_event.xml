<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yeni Etkinlik Oluştur"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/etEventName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Etkinlik Adı"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etEventDescription"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Etkinlik Açıklaması"
        android:gravity="top"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etEventDate"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Etkinlik Tarihi (Örn: 03.04.2025)"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnLocationAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konum Ekle"
        android:backgroundTint="#8BC34A"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateFinal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Oluştur"
        android:backgroundTint="#2E7D32"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        app:cornerRadius="12dp"/>

</LinearLayout>