<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yeni Etkinlik Oluştur"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/etEventName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Etkinlik Adı (Örn: Bahar Şenliği)"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etEventDesc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Açıklama ve Detaylar"
        android:gravity="top|start"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etEventDate"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Tarih (Örn: 25.05.2025)"
        android:padding="12dp"
        android:inputType="date"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="KAYDET VE OLUŞTUR"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#2E7D32"
        android:textColor="#FFFFFF"/>

</LinearLayout>