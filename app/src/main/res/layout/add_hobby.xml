<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hobi Takibi Başlat"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/etHobbyNameEntry"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Hobi Adı (Örn: Resim)"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etDailyGoal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Günlük Hedef (Dakika veya Sayfa)"
        android:inputType="number"
        android:padding="12dp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnSaveHobby"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Listeme Ekle"
        android:backgroundTint="#4CAF50"/>
</LinearLayout>